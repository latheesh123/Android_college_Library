<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.library.book.ChartsMenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:layout_marginBottom="0dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/studentschart"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_button"
            android:gravity="left|center_vertical"
            android:onClick="studentchart"
            android:paddingLeft="10dp"
            android:text="Students Vs Librarians"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/listbydate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_button"
            android:gravity="left|center_vertical"
            android:onClick="remainingbookschart"
            android:paddingLeft="10dp"
            android:text="Number of books vs Remaining"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/searchbook"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_button"
            android:gravity="left|center_vertical"
            android:onClick="bookstakengraph"
            android:paddingLeft="10dp"
            android:text="Books Issues Vs Book Returns"
            android:textAllCaps="false"

            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/returnbook"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_button"
            android:gravity="left|center_vertical"
            android:onClick="returnsgraph"
            android:paddingLeft="10dp"
            android:text="Number of late returns vs on time return"
            android:textAllCaps="false"
            android:textColor="@android:color/white"

            />


        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_button"
            android:gravity="left|center_vertical"
            android:onClick="morebookstakengraph"
            android:paddingLeft="10dp"
            android:text="Dates on which more books taken"
            android:textAllCaps="false"
            android:textColor="@android:color/white"

            />

    </LinearLayout>
</RelativeLayout>
