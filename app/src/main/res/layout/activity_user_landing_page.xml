<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.library.book.UserLandingPageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:layout_marginBottom="0dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/recordbook"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_button"
            android:gravity="left|center_vertical"
            android:onClick="btnaction"
            android:paddingLeft="10dp"
            android:text="CheckOut Book"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />


        <Button
            android:id="@+id/searchbook"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_button"
            android:gravity="left|center_vertical"
            android:onClick="btnaction"
            android:paddingLeft="10dp"
            android:text="Search Book"
            android:textAllCaps="false"

            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/mybooks"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_button"
            android:gravity="left|center_vertical"
            android:onClick="btnaction"
            android:paddingLeft="10dp"
            android:text="My Books"

            android:textAllCaps="false"

            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/favouriteList"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_button"
            android:gravity="left|center_vertical"
            android:onClick="btnaction"
            android:paddingLeft="10dp"
            android:text="Favourite List"
            android:textAllCaps="false"
            android:textColor="@android:color/white"

            />

        <Button
            android:id="@+id/settings"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_button"
            android:gravity="left|center_vertical"
            android:onClick="settings"
            android:paddingLeft="10dp"
            android:text="Settings"
            android:textAllCaps="false"
              android:visibility="gone"
            android:textColor="@android:color/white"

            />

    </LinearLayout>
</RelativeLayout>
